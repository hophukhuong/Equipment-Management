@model DACS.Context.Equipment

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper" style="min-height: 778px;">

    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 font-weight-bold">HỆ THỐNG QUẢN LÝ THIẾT BỊ </h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Hướng dẫn sử dụng</a></li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">


            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Tạo thiết bị</h3>
                </div>

                @using (Html.BeginForm("Create", "Equipment", FormMethod.Post, new { enctype = "multipart/form-data" }))


                {
                    @Html.AntiForgeryToken()

            <div class="card-body">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label>Mã định danh <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" required="" placeholder="Mã định danh" name="IDName">
                </div>

                <div class="form-group">
                    <label>Tên thiết bị <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" required="" placeholder="Tên thiết bị" name="Name">
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Avatar, "Ảnh thiết bị", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="file" name="ImageUpload" />
                    </div>
                </div>

                <div class="form-group">
                   
                    <label>Trạng thái <span class="text-danger">*</span></label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label>Loại thiết bị<span class="text-danger">*</span></label>
                    @Html.DropDownList("CategoryID", (SelectList)ViewBag.Name, "Chọn thiết bị", new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>Giá<span class="text-danger">*</span></label>
                    <input type="text" class="form-control" required="" placeholder="Giá" name="Price">
                </div>

                <div class="form-group">
                    <label>Ngày tạo <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" required="" placeholder="Ngày tạo" name="CreatedOnUtc">
                </div>

                <div class="form-group">
                    <label>Hạn bảo hành <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" required="" placeholder="Hạn bảo hành" name="UpdatedOnUtc">
                </div>


                <div class="form-group">
                    <label>Địa điểm<span class="text-danger">*</span></label>
                    @Html.DropDownList("Location", (SelectList)ViewBag.Location, "Địa điểm", new { @class = "form-control" })
                </div>



                <div class="form-group">
                    <label>Số lượng<span class="text-danger">*</span></label>
                    <input type="text" class="form-control" required="" placeholder="Số lượng" name="Amount" readonly value="1">
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Tạo" class="btn btn-default" />
                    </div>
                </div>
            </div>
                }
            </div>
        </div>
    </section>
</div>
