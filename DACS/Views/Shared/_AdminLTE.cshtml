    <script>
        function updateDateTime() {
            var today = new Date();

            var day = String(today.getDate()).padStart(2, '0');
            var month = String(today.getMonth() + 1).padStart(2, '0');
            var year = today.getFullYear();
            var hour = String(today.getHours()).padStart(2, '0');
            var minute = String(today.getMinutes()).padStart(2, '0');

            var element = document.querySelector('.Ngaythangnam');
            element.innerHTML = "Bây giờ là: " + hour + ":" + minute + " - " + day + "/" + month + "/" + year;
        }

        // Cập nhật ngày, tháng, năm và giờ mỗi giây
        setInterval(updateDateTime, 1000);

        // Cập nhật ngày, tháng, năm và giờ ban đầu
        updateDateTime();</script>
