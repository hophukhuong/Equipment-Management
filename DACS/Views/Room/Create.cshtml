@model DACS.Context.Room

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper" style="min-height: 778px;">

    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 font-weight-bold">HỆ THỐNG QUẢN LÝ Phòng </h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Hướng dẫn sử dụng</a></li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">


            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Tạo phòng</h3>
                </div>

                @using (Html.BeginForm("Create", "Room", FormMethod.Post, new { enctype = "multipart/form-data" }))


                {
                    @Html.AntiForgeryToken()

                    <div class="card-body">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <label>ID<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" required="" placeholder="ID" name="ID">
                        </div>

                        <div class="form-group">
                            <label>Loại thiết bị <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" required="" placeholder="Tên phòng" name="Name">
                        </div>



                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Tạo" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>
